{
  "private": true,
  "devDependencies": {
    "eslint": "^4.14.0",
    "stylelint": "^13.3.0"
  },
  "scripts": {
    "lint:css": "stylelint",
    "lint:css:all": "stylelint -- \"**/*.css\"",
